@{
    ViewBag.Title = "Action";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}
@model List<CodeFirst.Areas.Admin.Models.DTO.CategoryDTO>
<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            DataTables Advanced Tables
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="dataTable_wrapper">
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Kategori Adı</th>
                            <th>Açıklama</th>
                            <th>İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr id="a_@item.ID" class="even gradeA">
                                <td>@item.ID</td>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td><a href="/Admin/Category/UpdateCategory/@item.ID">Güncelle</a></td>
                                <td class="center">
                                    <img src="~/Areas/Admin/Content/img/Remove.png" width="30" height="30" alt="Alternate Text" onclick="Delete(@item.ID)"/>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
<script>
    function Delete(id)
    {
        $.ajax({
            url : "/Admin/Category/DeleteCategory/"+id,
            type:"POST",
            success: function(result){
                $("#a_"+id).fadeOut();
            }
        })
    }
</script>
