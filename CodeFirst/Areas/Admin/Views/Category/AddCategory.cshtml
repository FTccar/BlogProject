@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

@model CodeFirst.Areas.Admin.Models.DTO.CategoryDTO


@Html.Partial("/Areas/Admin/Views/Shared/Partial/FormMesssagePart.cshtml")


@using (Html.BeginForm("AddCategory", "Category"))
{
    <form role="form">
        <div class="form-group">
            @Html.LabelFor(x=>x.Name)
            @Html.TextBoxFor(x => x.Name, new { @class="form-control", @placeholder="Bir yazı gir"})
            @Html.ValidationMessageFor(x=>x.Name)
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Description)
            @Html.TextAreaFor(x => x.Description, new { @class="form-control", @placeholder="Bir yazı girin" })
            @Html.ValidationMessageFor(x => x.Description)
        </div>

        <button type="submit" class="btn btn-default">Kaydet</button>
        <button type="reset" class="btn btn-default">Reset Button</button>
    </form>
}

